<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jacksen.databindingdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/base_config"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListViewActivity"
            android:label="@string/list_view"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CollectionActivity"
            android:label="@string/expression"
            android:screenOrientation="portrait" />
        <activity
            android:name=".chat.ChatActivity"
            android:label="@string/recycler_view1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gallery.GalleryActivity"
            android:label="@string/recycler_view2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gallery.GalleryDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IncludeActivity"
            android:label="@string/include_config"
            android:screenOrientation="portrait" />
    </application>

</manifest>